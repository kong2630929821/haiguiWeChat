.new-page{
    z-index: 10;
    background: #F9F9F9;
    display: flex;
    flex-direction: column;
}
.box{
    flex: 1 0 0;
    overflow-x: hidden;
    overflow-y: auto;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
    padding-bottom:20px; 
}
.btn{
    height:98px;
    background:rgba(138,74,243,1);
    font-size:32px;
    font-weight:500;
    color:rgba(255,255,255,1);
    line-height:98px;
    width: 100%;
    text-align: center;
}